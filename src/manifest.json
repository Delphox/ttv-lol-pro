{
  "manifest_version": 2,
  "name": "TTV LOL (Younes Aassila's Fork)",
  "description": "TTV LOL removes livestream ads from twitch.tv",
  "version": "1.1.0",
  "background": {
    "persistent": true,
    "scripts": ["ts/background/background.ts"]
  },
  "browser_action": {
    "default_icon": {
      "128": "images/icon.png"
    },
    "default_title": "TTV LOL",
    "default_popup": "common/html/popup.html"
  },
  "browser_specific_settings": {
    "gecko": {
      "update_url": "https://younesaassila.github.io/ttv-lol/updates.json"
    }
  },
  "icons": {
    "128": "images/icon.png"
  },
  "options_ui": {
    "browser_style": false,
    "open_in_tab": true,
    "page": "common/html/options.html"
  },
  "permissions": [
    "storage",
    "webRequest",
    "webRequestBlocking",
    "https://*.twitch.tv/*",
    "https://usher.ttvnw.net/*",
    "https://api.ttv.lol/*"
  ]
}
